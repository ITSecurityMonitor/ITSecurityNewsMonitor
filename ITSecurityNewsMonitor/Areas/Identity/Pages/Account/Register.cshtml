@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = "_IdentityLayout";
}

<!-- Title -->
<div class="mb-4">
    <h1 class="font-bold text-5xl">
        @ViewData["Title"]
    </h1>
    <a href="@("/Identity" + Url.Action("Login", "Account"))" class="link flex mt-2">
        ← Back to Log in
    </a>
</div>

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div asp-validation-summary="All"></div>
    <div class="field">
        <label asp-for="Input.Email" class="text-field-description"></label>
        <input asp-for="Input.Email" class="text-field w-full" />
    </div>
    <div class="field mt-2">
        <label asp-for="Input.Password" class="text-field-description"></label>
        <input asp-for="Input.Password" class="text-field w-full" />
        <span asp-validation-for="Input.Password" class="text-field-description"></span>
    </div>
    <div class="field mt-2">
        <label asp-for="Input.ConfirmPassword" class="text-field-description"></label>
        <input asp-for="Input.ConfirmPassword" class="text-field w-full" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-field-description"></span>
    </div>
    <div class="actions mt-4">
        <button type="submit" class="button">Sign up</button>
    </div>
</form>

<!-- Other links -->
<div class="mt-4 text-sm">
    <a id="forgot-password" asp-page="./ForgotPassword" class="link">Forgot your password?</a>
    <br />
    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="link">Didn't receive confirmation instructions?</a>
    <br />
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
