@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "_IdentityLayout";
}


<!-- Title -->
<div class="mb-4">
    <h1 class="font-bold text-5xl">
        @ViewData["Title"]
    </h1>
    <a href="@("/Identity" + Url.Action("Login", "Account"))" class="link flex mt-2">
        ← Back to Log in
    </a>
</div>


<form method="post">
    <div class="field">
        <label asp-for="Input.Email" class="text-field-description"></label>
        <br />
        <input asp-for="Input.Email" class="text-field w-full" />
    </div>
    <div class="actions mt-4">
        <button type="submit" class="button">Submit</button>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
