@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="">
    <h1 class="font-bold text-3xl">@ViewData["Title"]</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="mt-5 bg-purple-200 p-5 rounded">
            Your account contains personal data that you have given us.
            This page allows you to download or delete that data.
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </div>
        <div class="flex mt-5">
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="button" type="submit">Download</button>
        </form>
        <form id="delete-data" asp-page="DeletePersonalData" method="get" class="ml-2">
            <button class="button danger" type="submit">Delete</button>
        </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
