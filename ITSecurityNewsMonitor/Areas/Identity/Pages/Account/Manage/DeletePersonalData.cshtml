@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}


<div class="mb-5">
    <h1 class="font-bold text-3xl">@ViewData["Title"]</h1>
</div>

<div class="bg-purple-200 p-5 rounded" role="alert">
    <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="mt-5 flex">
                <label asp-for="Input.Password" class="input-label"></label>
                <input asp-for="Input.Password" class="text-field" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="mt-5 button-danger" type="submit">Delete data and close my account</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}