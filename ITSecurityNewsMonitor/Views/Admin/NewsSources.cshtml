@model ITSecurityNewsMonitor.ViewModels.AdminIndexViewModel

@{
    ViewData["Title"] = "Manage News Sources";
}

<div class="site-header">
    <h1>@ViewData["Title"]</h1>
    <a href="@Url.Action("Index", "Admin")">
        <span class="">← Back to Admin Overview</span>
    </a>
</div>

<div class="pt-5 px-10 pb-2 text-right">
    <button class="button text-xs">Add Source</button>
</div>

<div class="px-10 table w-full bg-white">
    <div class="grid grid-cols-4">
        <div>
            Name
        </div>
        <div>
            Link
        </div>
        <div>
            Homepage
        </div>
        <div class="text-right">
            Actions
        </div>
    </div>
    @foreach (var source in Model.Sources)
        {
            <div class="grid grid-cols-4">
                <div class="break-all text-xs">@source.Name</div>
                <div class="break-all text-xs">@source.Link</div>
                <div class="break-all text-xs">@source.Homepage</div>
                <div class="text-right">
                    <button class="button text-xs">Edit</button>
                    <button class="button-danger text-xs">Delete</button>
                </div>
            </div>
        }
</div>

@section Scripts {
}